<!DOCTYPE html>
<html>
<head>
  <title>New Post</title>
</head>
<body>
  <h1>New Post</h1>
  
  <%= form_with(model: @post, url: user_posts_path(current_user), method: :post) do |form| %>
    <div class="field">
      <%= form.label :title %>
      <%= form.text_field :title %>
    </div>
    <div class="field">
      <%= form.label :text %>
      <%= form.text_area :text, rows: 5 %>
    </div>
    <div class="field">
      <%= form.label :user_name %>
      <%= form.text_field :user_name %>
    </div>
    <%= form.submit 'Create Post' %>
  <% end %>

  <%= link_to 'Back to Posts', user_posts_path(current_user) %>
</body>
</html>
